    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Dev - tclib(Flask)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/wsgi.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
        },
        {
            "name": "Python: Staging - tclib(Flask)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/wsgi.py",
            "console": "integratedTerminal",
            "env": {
                "FLASK_APP": "wsgi.py",
                "FLASK_ENV": "production",
                "FLASK_DEBUG": "0"
            },
        },
        {
            "name": "Python: Dev - tclib(Script)",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/app/tclib.py",
            "console": "integratedTerminal"
        }
    ]
}